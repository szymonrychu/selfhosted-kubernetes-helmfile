[Unit]
Description="Consul Template"
Documentation=https://www.consul.io/
Requires=consul.service
After=consul.service

[Service]
ExecStart=/usr/bin/consul-template -consul-addr 127.0.0.1:8500 -template "{{ consul_template_root_dir }}/nginx.conf.tpl:/etc/nginx/nginx.conf:sh -c 'kill -HUP $( cat /var/run/nginx.pid )'"
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target